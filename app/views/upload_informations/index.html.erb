<p id="notice"><%= notice %></p>

<h1>Upload Information</h1>

<table>
  <thead>
    <tr>
      <th>Fornavn</th>
      <th>Efternavn</th>
      <th>Postnummer</th>
      <th>Addresse</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_informations.each do |upload_information| %>
      <tr>
        <td><%= upload_information.user.first_name if upload_information.user %></td>

        <td><%= upload_information.fornavn %></td>
        <td><%= upload_information.efternavn %></td>
        <td><%= upload_information.postnummer %></td>
        <td><%= upload_information.addresse %></td>
        <td><%= upload_information.user_id %></td>
        <td><%= link_to 'Show', upload_information, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_upload_information_path(upload_information), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', upload_information, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-red' %></td>
      </tr>
    <% end %>


  </tbody>
</table>

<br>
<tr>  
      <h3>Download to CSV</h3>
      <td><%= link_to 'CSV Report', upload_informations_path(format: "csv"), class: 'btn btn-default' %></td>
      </tr>
      <%= link_to 'Upload New Information', new_upload_information_path, class: 'btn btn-default' %>
